<%- include('includes/head') %>
  <%- include('includes/nav') %>

    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-3">
          <h1 class="text-center">Entrar ou Cadastrar</h1>
          <p class="text-center lead">Acesse ou crie sua conta</p>
          
          <%- include('includes/messages') %> 

        <div class="row">
          <div class="col-lg my-5">
            <h4>Cadastrar-se</h4>
            <p>Caso não possua um cadastro, preencha o formulário abaixo:</p>

            

            <form class="form-cadastro" action="/login/register" method="post">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <div class="mb-3">
                <label>Email</label>
                <input type="email" class="form-control" name="email">
              </div>

              <div class="mb-3">
                <label>Senha</label>
                <input type="password" class="form-control" name="password">
              </div>

              <button class="btn btn-primary">Cadastrar</button>
            </form>

          </div>
          <div class="col-lg my-5">
            <h4>Entrar</h4>
            <p>Faça login abaixo:</p>

            <form class="form-login" action="/login/login" method="post">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <div class="mb-3">
                <label>Email</label>
                <input type="email" class="form-control" name="email">
              </div>

              <div class="mb-3">
                <label>Senha</label>
                <input type="password" class="form-control" name="password">
              </div>

              <button class="btn btn-primary">Entrar</button>
            </form>

          </div>
          </div>
        </div>
        <div class="col-lg-2"></div>
      </div>
    </div>

    <%- include('includes/footer') %>